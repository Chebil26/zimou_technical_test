<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_res_users_prospect_tree" model="ir.ui.view">
        <field name="name">view_res_users_prospect_tree</field>
        <field name="model">res.users.prospect</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
                <field name="user_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_res_users_prospect_form" model="ir.ui.view">
        <field name="name">view_res_users_prospect_form</field>
        <field name="model">res.users.prospect</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                    <button name="btn_set_prospect" string="Set as a prospect" class="oe_highlight" type="object" 
                            confirm="Do you want to set the contact as a prospect ?"/>
                    <button name="btn_set_offer" string="Set as offer" class="oe_highlight" type="object" 
                            confirm="Do you want to set the contact as a offer ?"/>
                    <button name="btn_set_sent" string="Set as sent" class="oe_highlight" type="object" 
                            confirm="Do you want to set the contact as a offer ?"/>
                    <button name="btn_set_won" string="Set as sent" type="object" 
                            confirm="Do you want to set the contact as won ."/>
                    <button name="btn_set_lost" string="Set as lost" type="object" 
                            confirm="Do you want to set the contact as lost ."/>
                    <field name="state" widget="statusbar"/>
                </header>
                <h1>
                    <field name="name" readonly="True"/>
                </h1>
                <sheet>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="date_created"/>
                            <field name="date_offer"  attrs="{'invisible': [('date_offer','=', False)]}"/>
                            <field name="date_sent" attrs="{'invisible': [('date_sent','=', False)]}"/>
                            <field name="date_won" attrs="{'invisible': [('date_won','=', False)]}"/>
                            <field name="date_lost" attrs="{'invisible': [('date_lost','=', False)]}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_res_users_prospect" model="ir.actions.act_window">
        <field name="name">Prospects</field>
        <field name="res_model">res.users.prospect</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
